<div class="chat_area">
  <p class="room_keyword">このルームの話題:<%= @room.keyword %></p>
  <div id="messages", data-room_id="<%= @room.id %>">
    <p><%= render @messages %></p>
  </div>
  <div class="chat_form">
  <% if room_user? %>
    <form>
      <input type="text" data-behavior="room_speaker">
    </form>
  <% else %>
    <%= form_for(:room_user, url: join_path_url) do |f| %>
    <%= hidden_field_tag :id, @room.id %>
    <%= f.submit "このルームに参加する"%>
  <% end %>
  </div>
<% end %>
</div>
